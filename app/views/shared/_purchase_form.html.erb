  <%= form_for Purchase.new do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.text_area :guitarid, :value => Guitar.find(params[:id]).id %>
        <%= f.text_area :address, placeholder: "Address" %>
        <%= f.text_area :country, placeholder: "Country" %>
                  <%= f.text_area :delivery, placeholder: "Express or Regular" %>

      </div>
      <%= f.submit "Post", class: "btn btn-primary" %>

    <% end %>