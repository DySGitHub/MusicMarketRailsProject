  <%= form_for Purchase.new do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
          <p></p>
                  <%= f.label "Guitar ID" %>
                    <p></p>

        <%= f.text_area :guitarid, :value => Guitar.find(params[:id]).id, :readonly => true %>
        <%= f.text_area :address, placeholder: "Address" %>
        <%= f.text_area :country, placeholder: "Country" %>
        <%= f.label "Delivery Options" %>
           <select name="purchase[delivery]">
  <option value="Express" selected="selected">Express</option>
  <option value="Regular">Regular</option>

</select>

      </div>
      <%= f.submit "Post", class: "btn btn-primary" %>

    <% end %>


