   <li id="feedback-<%= feedback.id %>">
      <%= link_to gravatar_for(feedback.user, size: 50), feedback.user %>
      <span class="user"><%= link_to feedback.user.name, feedback.user %></span>
      <span class="content"><%= feedback.content %></span>
      <span class="timestamp">
        Posted <%= time_ago_in_words(feedback.created_at) %> ago.
           <% if current_user?(feedback.user) %>
          <%= link_to "delete", feedback, method: :delete,
                                           data: { confirm: "You sure?" } %>
        <% end %>
      </span>
    </li>